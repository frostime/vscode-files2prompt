{
  "name": "code-to-prompt",
  "displayName": "Code to Prompt",
  "author": {
    "name": "frostime"
  },
  "description": "快速将你项目中的代码合并成一个 Prompt，方便你复制给 GPT",
  "repository": {
    "type": "git",
    "url": "https://github.com/frostime/vscode-files2prompt"
  },
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-to-prompt.openedFiles",
        "title": "将打开的文件的内容合并为 Prompt",
        "category": "Prompt"
      },

      {
        "command": "code-to-prompt.addFileToPrompt",
        "title": "添加文件到 Prompt 集合",
        "category": "Prompt"
      },
      {
        "command": "code-to-prompt.addSelectionToPrompt",
        "title": "添加选中内容到 Prompt 集合",
        "category": "Prompt"
      },
      {
        "command": "code-to-prompt.removeItemFromPrompt",
        "title": "从 Prompt 集合中删除",
        "category": "Prompt"
      },
      {
        "command": "code-to-prompt.clearPromptItems",
        "title": "清空 Prompt 集合",
        "category": "Prompt"
      },
      {
        "command": "code-to-prompt.generatePrompt",
        "title": "生成 Prompt",
        "category": "Prompt"
      },
      {
        "command": "code-to-prompt.moveItemUp",
        "title": "上移",
        "category": "Prompt",
        "icon": "$(arrow-up)"
      },
      {
        "command": "code-to-prompt.moveItemDown",
        "title": "下移",
        "category": "Prompt",
        "icon": "$(arrow-down)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "prompt-explorer",
          "title": "Prompt 集合",
          "icon": "$(list-selection)"
        }
      ]
    },
    "views": {
      "prompt-explorer": [
        {
          "id": "promptItemsView",
          "name": "Prompt 集合",
          "icon": "$(list-selection)"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "code-to-prompt.openedFiles",
          "group": "prompt@0"
        },
        {
          "command": "code-to-prompt.addFileToPrompt",
          "group": "prompt@1"
        },
        {
          "command": "code-to-prompt.addSelectionToPrompt",
          "when": "editorHasSelection",
          "group": "prompt@2"
        }
      ],
      "editor/title/context": [
        {
          "command": "code-to-prompt.addFileToPrompt",
          "group": "prompt@1"
        }
      ],
      "explorer/context": [
        {
          "command": "code-to-prompt.addFileToPrompt",
          "group": "prompt@1",
          "when": "explorerResourceIsFolder || explorerResourceIsRoot || resourceExtname"
        }
      ],
      "view/title": [
        {
          "command": "code-to-prompt.clearPromptItems",
          "when": "view == promptItemsView",
          "group": "navigation@1"
        },
        {
          "command": "code-to-prompt.generatePrompt",
          "when": "view == promptItemsView",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "code-to-prompt.removeItemFromPrompt",
          "when": "view == promptItemsView",
          "group": "inline"
        },
        {
          "command": "code-to-prompt.moveItemUp",
          "when": "view == promptItemsView",
          "group": "inline"
        },
        {
          "command": "code-to-prompt.moveItemDown",
          "when": "view == promptItemsView",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "code-to-prompt.openedFiles"
        },

        {
          "command": "code-to-prompt.generatePrompt"
        },
        {
          "command": "code-to-prompt.clearPromptItems"
        },
        {
          "command": "code-to-prompt.addFileToPrompt",
          "when": "false"
        },
        {
          "command": "code-to-prompt.addSelectionToPrompt",
          "when": "editorHasSelection"
        },
        {
          "command": "code-to-prompt.removeItemFromPrompt",
          "when": "false"
        },
        {
          "command": "code-to-prompt.moveItemUp",
          "when": "false"
        },
        {
          "command": "code-to-prompt.moveItemDown",
          "when": "false"
        }
      ]
    },
    "configuration": {
      "title": "Code to Prompt",
      "properties": {
        "codeToPrompt.fileTemplate": {
          "type": "string",
          "default": "```{{FilePath}}\n{{Content}}\n```",
          "description": "每个文件的模板。可用变量: {{Content}}, {{FilePath}}, {{FileName}}, {{FileExt}}"
        },
        "codeToPrompt.baseTemplate": {
          "type": "string",
          "default": "### Codes ###\n\nOutlines:\n\n{{FilePathList}}\n\nContent:\n\n{{FilesPrompts}}",
          "description": "基础模板，用于包裹所有文件内容。可用变量: {{FilePathList}}, {{FilesPrompts}}"
        },
        "codeToPrompt.sortOrder": {
          "type": "string",
          "default": "openingOrder",
          "enum": [
            "openingOrder",
            "filePath"
          ],
          "description": "指定合并文档时的排序方式。'openingOrder' (默认值) 保持原始顺序，'filePath' 按文件路径排序。"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "uuid": "^11.1.0"
  }
}
