{
  "name": "assemble-code-to-prompt",
  "displayName": "Assemble LLM Prompt",
  "description": "快速将代码、终端输出和文件夹结构合并成一个 Prompt，方便你复制给 GPT",
  "version": "4.1.1",
  "publisher": "frostime",
  "author": {
    "name": "frostime"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/frostime/vscode-files2prompt"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "prompt",
    "gpt",
    "llm",
    "code",
    "ai"
  ],
  "icon": "icon.jpg",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "preview": true,
  "main": "./out/extension.js",
  "activationEvents": [],
  "contributes": {
    "configuration": {
      "title": "Assemble Code to Prompt",
      "properties": {
        "assembleCodeToPrompt.ignore.directories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            ".git",
            ".svn",
            ".hg",
            "node_modules",
            "__pycache__",
            ".venv",
            "venv",
            ".env",
            "dist",
            "build",
            ".next",
            ".nuxt",
            "coverage",
            ".nyc_output",
            ".cache",
            ".parcel-cache",
            ".turbo",
            "out",
            "target"
          ],
          "description": "添加文件夹时忽略的目录名（精确匹配）"
        },
        "assembleCodeToPrompt.ignore.files": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            ".DS_Store",
            "Thumbs.db",
            ".gitignore",
            ".gitattributes",
            "package-lock.json",
            "yarn.lock",
            "pnpm-lock.yaml",
            "composer.lock",
            "Cargo.lock",
            "Gemfile.lock",
            "poetry.lock"
          ],
          "description": "添加文件夹时忽略的文件名（精确匹配）"
        },
        "assembleCodeToPrompt.ignore.extensions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            ".pyc",
            ".pyo",
            ".pyd",
            ".so",
            ".dll",
            ".dylib",
            ".class",
            ".o",
            ".obj",
            ".exe",
            ".bin",
            ".map",
            ".min.js",
            ".min.css"
          ],
          "description": "添加文件夹时忽略的文件扩展名"
        },
        "assembleCodeToPrompt.ignore.patterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "添加文件夹时忽略的 glob 模式（如 *.log, temp_*）"
        },
        "assembleCodeToPrompt.format.preset": {
          "type": "string",
          "enum": [
            "xml",
            "markdown",
            "plain",
            "github",
            "custom"
          ],
          "enumDescriptions": [
            "<Content src=\"...\" lang=\"...\">...</Content>",
            "Markdown 代码块 ```lang...```",
            "纯文本，无包装",
            "GitHub 风格，带文件路径注释",
            "使用自定义 JavaScript 函数"
          ],
          "default": "xml",
          "description": "代码内容的格式化预设"
        },
        "assembleCodeToPrompt.format.customScript": {
          "type": "string",
          "default": "",
          "editPresentation": "multilineText",
          "description": "自定义格式化 JavaScript 函数。需要定义一个 format 函数，接收 ctx 参数（包含 filePath, language, content, type, lineStart, lineEnd），返回格式化后的字符串。\n\n示例:\nfunction format(ctx) {\n  return `// File: ${ctx.filePath}\\n${ctx.content}`;\n}"
        }
      }
    },
    "commands": [
      {
        "command": "assemble-code-to-prompt.addFileToPrompt",
        "title": "添加文件到 Prompt",
        "category": "Prompt",
        "icon": "$(file-add)"
      },
      {
        "command": "assemble-code-to-prompt.addOpenedFilesToPrompt",
        "title": "添加所有打开的文件",
        "category": "Prompt",
        "icon": "$(files)"
      },
      {
        "command": "assemble-code-to-prompt.addSelectionToPrompt",
        "title": "添加选中代码",
        "category": "Prompt",
        "icon": "$(selection)"
      },
      {
        "command": "assemble-code-to-prompt.addTerminalOutputToPrompt",
        "title": "添加终端输出",
        "category": "Prompt",
        "icon": "$(terminal)"
      },
      {
        "command": "assemble-code-to-prompt.addFolderTreeToPrompt",
        "title": "添加文件夹树结构",
        "category": "Prompt",
        "icon": "$(list-tree)"
      },
      {
        "command": "assemble-code-to-prompt.addGitDiffCachedToPrompt",
        "title": "添加全局 Git Diff (--cached)",
        "category": "Prompt",
        "icon": "$(git-compare)"
      },
      {
        "command": "assemble-code-to-prompt.addGitDiffFileToPrompt",
        "title": "添加文件 Git Diff (--cached)",
        "category": "Prompt",
        "icon": "$(diff)"
      },
      {
        "command": "assemble-code-to-prompt.addUserInstructionToPrompt",
        "title": "添加用户指令",
        "category": "Prompt",
        "icon": "$(comment)"
      },
      {
        "command": "assemble-code-to-prompt.editStaticPromptItem",
        "title": "编辑内容",
        "category": "Prompt",
        "icon": "$(edit)"
      },
      {
        "command": "assemble-code-to-prompt.removeItemFromPrompt",
        "title": "删除",
        "category": "Prompt",
        "icon": "$(trash)"
      },
      {
        "command": "assemble-code-to-prompt.moveItemUp",
        "title": "上移",
        "category": "Prompt",
        "icon": "$(arrow-up)"
      },
      {
        "command": "assemble-code-to-prompt.moveItemDown",
        "title": "下移",
        "category": "Prompt",
        "icon": "$(arrow-down)"
      },
      {
        "command": "assemble-code-to-prompt.clearPromptItems",
        "title": "清空 Prompt 集合",
        "category": "Prompt",
        "icon": "$(clear-all)"
      },
      {
        "command": "assemble-code-to-prompt.generatePrompt",
        "title": "生成 Prompt",
        "category": "Prompt",
        "icon": "$(play)"
      },
      {
        "command": "assemble-code-to-prompt.exportToZip",
        "title": "导出为 ZIP",
        "category": "Prompt",
        "icon": "$(package)"
      },
      {
        "command": "assemble-code-to-prompt.reloadConfig",
        "title": "重新加载配置",
        "category": "Prompt",
        "icon": "$(refresh)"
      }
    ],
    "submenus": [
      {
        "id": "assemble-code-to-prompt.addToPromptSubmenu",
        "label": "添加到 Prompt",
        "icon": "$(add)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "prompt-explorer",
          "title": "Prompt 集合",
          "icon": "$(list-selection)"
        }
      ]
    },
    "views": {
      "prompt-explorer": [
        {
          "id": "promptItemsView",
          "name": "Prompt 集合",
          "icon": "$(list-selection)"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "assemble-code-to-prompt.addOpenedFilesToPrompt"
        },
        {
          "command": "assemble-code-to-prompt.addSelectionToPrompt",
          "when": "editorHasSelection"
        },
        {
          "command": "assemble-code-to-prompt.addTerminalOutputToPrompt"
        },
        {
          "command": "assemble-code-to-prompt.addFolderTreeToPrompt"
        },
        {
          "command": "assemble-code-to-prompt.addGitDiffCachedToPrompt"
        },
        {
          "command": "assemble-code-to-prompt.addGitDiffFileToPrompt"
        },
        {
          "command": "assemble-code-to-prompt.addUserInstructionToPrompt"
        },
        {
          "command": "assemble-code-to-prompt.generatePrompt"
        },
        {
          "command": "assemble-code-to-prompt.exportToZip"
        },
        {
          "command": "assemble-code-to-prompt.clearPromptItems"
        },
        {
          "command": "assemble-code-to-prompt.reloadConfig"
        },
        {
          "command": "assemble-code-to-prompt.addFileToPrompt",
          "when": "false"
        },
        {
          "command": "assemble-code-to-prompt.removeItemFromPrompt",
          "when": "false"
        },
        {
          "command": "assemble-code-to-prompt.editStaticPromptItem",
          "when": "false"
        },
        {
          "command": "assemble-code-to-prompt.moveItemUp",
          "when": "false"
        },
        {
          "command": "assemble-code-to-prompt.moveItemDown",
          "when": "false"
        }
      ],
      "editor/context": [
        {
          "command": "assemble-code-to-prompt.addFileToPrompt",
          "group": "prompt@1"
        },
        {
          "command": "assemble-code-to-prompt.addSelectionToPrompt",
          "group": "prompt@2",
          "when": "editorHasSelection"
        },
        {
          "command": "assemble-code-to-prompt.addGitDiffFileToPrompt",
          "group": "prompt@3"
        }
      ],
      "editor/title/context": [
        {
          "command": "assemble-code-to-prompt.addFileToPrompt",
          "group": "prompt@1"
        },
        {
          "command": "assemble-code-to-prompt.addGitDiffFileToPrompt",
          "group": "prompt@2"
        }
      ],
      "terminal/context": [
        {
          "command": "assemble-code-to-prompt.addTerminalOutputToPrompt",
          "group": "prompt@1"
        }
      ],
      "explorer/context": [
        {
          "command": "assemble-code-to-prompt.addFileToPrompt",
          "group": "prompt@1",
          "when": "explorerResourceIsFolder || resourceExtname"
        },
        {
          "command": "assemble-code-to-prompt.addFolderTreeToPrompt",
          "group": "prompt@2",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "assemble-code-to-prompt.addGitDiffFileToPrompt",
          "group": "prompt@3",
          "when": "!explorerResourceIsFolder && resourceExtname"
        },
        {
          "command": "assemble-code-to-prompt.addGitDiffCachedToPrompt",
          "group": "prompt@4",
          "when": "explorerResourceIsRoot"
        }
      ],
      "view/title": [
        {
          "command": "assemble-code-to-prompt.generatePrompt",
          "when": "view == promptItemsView",
          "group": "navigation@1"
        },
        {
          "command": "assemble-code-to-prompt.exportToZip",
          "when": "view == promptItemsView",
          "group": "navigation@2"
        },
        {
          "command": "assemble-code-to-prompt.clearPromptItems",
          "when": "view == promptItemsView",
          "group": "navigation@3"
        },
        {
          "submenu": "assemble-code-to-prompt.addToPromptSubmenu",
          "when": "view == promptItemsView",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "assemble-code-to-prompt.editStaticPromptItem",
          "when": "view == promptItemsView && viewItem =~ /.*-static$/",
          "group": "inline@1"
        },
        {
          "command": "assemble-code-to-prompt.removeItemFromPrompt",
          "when": "view == promptItemsView",
          "group": "inline@2"
        },
        {
          "command": "assemble-code-to-prompt.moveItemUp",
          "when": "view == promptItemsView",
          "group": "inline@3"
        },
        {
          "command": "assemble-code-to-prompt.moveItemDown",
          "when": "view == promptItemsView",
          "group": "inline@4"
        }
      ],
      "assemble-code-to-prompt.addToPromptSubmenu": [
        {
          "command": "assemble-code-to-prompt.addFileToPrompt",
          "group": "1_content@1"
        },
        {
          "command": "assemble-code-to-prompt.addOpenedFilesToPrompt",
          "group": "1_content@2"
        },
        {
          "command": "assemble-code-to-prompt.addSelectionToPrompt",
          "group": "1_content@3"
        },
        {
          "command": "assemble-code-to-prompt.addFolderTreeToPrompt",
          "group": "2_structure@1"
        },
        {
          "command": "assemble-code-to-prompt.addTerminalOutputToPrompt",
          "group": "2_structure@2"
        },
        {
          "command": "assemble-code-to-prompt.addGitDiffCachedToPrompt",
          "group": "3_git@1"
        },
        {
          "command": "assemble-code-to-prompt.addGitDiffFileToPrompt",
          "group": "3_git@2"
        },
        {
          "command": "assemble-code-to-prompt.addUserInstructionToPrompt",
          "group": "4_user@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "uuid": "^11.1.0"
  }
}