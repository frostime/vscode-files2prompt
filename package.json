{
  "name": "assemble-code-to-prompt",
  "displayName": "Assemble Code to Prompt",
  "author": {
    "name": "frostime"
  },
  "publisher": "frostime",
  "description": "快速将代码、终端输出和文件夹结构合并成一个 Prompt，方便你复制给 GPT",
  "repository": {
    "type": "git",
    "url": "https://github.com/frostime/vscode-files2prompt"
  },
  "version": "2.0.0",
  "engines": {
    "vscode": "^1.95.0"
  },
  "icon": "icon.jpg",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "preview": true,
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "submenus": [
      {
        "id": "assemble-code-to-prompt.addToPromptSubmenu",
        "label": "添加到 Prompt",
        "icon": "$(add)"
      }
    ],
    "commands": [
      {
        "command": "assemble-code-to-prompt.addOpenedFilesToPrompt",
        "title": "添加所有打开的文件到 Prompt 集合",
        "category": "Prompt",
        "icon": "$(add)"
      },
      {
        "command": "assemble-code-to-prompt.addFileToPrompt",
        "title": "添加本文件到 Prompt 集合",
        "category": "Prompt",
        "icon": "$(file)"
      },
      {
        "command": "assemble-code-to-prompt.addSelectionToPrompt",
        "title": "添加选中内容到 Prompt 集合",
        "category": "Prompt",
        "icon": "$(selection)"
      },
      {
        "command": "assemble-code-to-prompt.addTerminalOutputToPrompt",
        "title": "添加终端输出到 Prompt 集合",
        "category": "Prompt",
        "icon": "$(terminal)"
      },
      {
        "command": "assemble-code-to-prompt.addFolderTreeToPrompt",
        "title": "添加文件夹树结构到 Prompt 集合",
        "category": "Prompt",
        "icon": "$(list-tree)"
      },
      {
        "command": "assemble-code-to-prompt.removeItemFromPrompt",
        "title": "从 Prompt 集合中删除",
        "category": "Prompt",
        "icon": "$(trash)"
      },
      {
        "command": "assemble-code-to-prompt.clearPromptItems",
        "title": "清空 Prompt 集合",
        "category": "Prompt",
        "icon": "$(clear-all)"
      },
      {
        "command": "assemble-code-to-prompt.generatePrompt",
        "title": "生成 Prompt",
        "category": "Prompt",
        "icon": "$(play)"
      },
      {
        "command": "assemble-code-to-prompt.moveItemUp",
        "title": "上移",
        "category": "Prompt",
        "icon": "$(arrow-up)"
      },
      {
        "command": "assemble-code-to-prompt.moveItemDown",
        "title": "下移",
        "category": "Prompt",
        "icon": "$(arrow-down)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "prompt-explorer",
          "title": "Prompt 集合",
          "icon": "$(list-selection)"
        }
      ]
    },
    "views": {
      "prompt-explorer": [
        {
          "id": "promptItemsView",
          "name": "Prompt 集合",
          "icon": "$(list-selection)"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "assemble-code-to-prompt.addOpenedFilesToPrompt",
          "group": "prompt@0"
        },
        {
          "command": "assemble-code-to-prompt.addFileToPrompt",
          "group": "prompt@1"
        },
        {
          "command": "assemble-code-to-prompt.addSelectionToPrompt",
          "when": "editorHasSelection",
          "group": "prompt@2"
        }
      ],
      "terminal/context": [
        {
          "command": "assemble-code-to-prompt.addTerminalOutputToPrompt",
          "group": "prompt@1"
        }
      ],
      "editor/title/context": [
        {
          "command": "assemble-code-to-prompt.addFileToPrompt",
          "group": "prompt@1"
        }
      ],
      "explorer/context": [
        {
          "command": "assemble-code-to-prompt.addFileToPrompt",
          "group": "prompt@1",
          "when": "explorerResourceIsFolder || explorerResourceIsRoot || resourceExtname"
        },
        {
          "command": "assemble-code-to-prompt.addFolderTreeToPrompt",
          "group": "prompt@2",
          "when": "explorerResourceIsFolder || explorerResourceIsRoot"
        }
      ],
      "view/title": [
        {
          "command": "assemble-code-to-prompt.clearPromptItems",
          "when": "view == promptItemsView",
          "group": "navigation@1"
        },
        {
          "command": "assemble-code-to-prompt.generatePrompt",
          "when": "view == promptItemsView",
          "group": "navigation@2"
        },
        {
          "submenu": "assemble-code-to-prompt.addToPromptSubmenu",
          "when": "view == promptItemsView",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "assemble-code-to-prompt.removeItemFromPrompt",
          "when": "view == promptItemsView",
          "group": "inline@1"
        },
        {
          "command": "assemble-code-to-prompt.moveItemUp",
          "when": "view == promptItemsView",
          "group": "inline@2"
        },
        {
          "command": "assemble-code-to-prompt.moveItemDown",
          "when": "view == promptItemsView",
          "group": "inline@3"
        }
      ],
      "assemble-code-to-prompt.addToPromptSubmenu": [
        {
          "command": "assemble-code-to-prompt.addOpenedFilesToPrompt",
          "group": "1_add@1"
        },
        {
          "command": "assemble-code-to-prompt.addFileToPrompt",
          "group": "1_add@2"
        },
        {
          "command": "assemble-code-to-prompt.addSelectionToPrompt",
          "group": "1_add@3"
        },
        {
          "command": "assemble-code-to-prompt.addTerminalOutputToPrompt",
          "group": "1_add@4"
        },
        {
          "command": "assemble-code-to-prompt.addFolderTreeToPrompt",
          "group": "1_add@5"
        }
      ],
      "commandPalette": [
        {
          "command": "assemble-code-to-prompt.addOpenedFilesToPrompt"
        },
        {
          "command": "assemble-code-to-prompt.generatePrompt"
        },
        {
          "command": "assemble-code-to-prompt.clearPromptItems"
        },
        {
          "command": "assemble-code-to-prompt.addTerminalOutputToPrompt"
        },
        {
          "command": "assemble-code-to-prompt.addFolderTreeToPrompt"
        },
        {
          "command": "assemble-code-to-prompt.addFileToPrompt",
          "when": "false"
        },
        {
          "command": "assemble-code-to-prompt.addSelectionToPrompt",
          "when": "editorHasSelection"
        },
        {
          "command": "assemble-code-to-prompt.removeItemFromPrompt",
          "when": "false"
        },
        {
          "command": "assemble-code-to-prompt.moveItemUp",
          "when": "false"
        },
        {
          "command": "assemble-code-to-prompt.moveItemDown",
          "when": "false"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "uuid": "^11.1.0"
  }
}
