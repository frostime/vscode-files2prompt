{
  "name": "files-to-prompt",
  "displayName": "files-to-prompt",
  "description": "将打开的文件的内容合并为一个 prompt，方便你复制给 GPT",
  "repository": {
    "type": "git",
    "url": "https://github.com/frostime/vscode-files2prompt"
  },
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "files-to-prompt.openedFiles",
        "title": "将打开的文件的内容合并为 Prompt",
        "category": "Merge Files"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "files-to-prompt.openedFiles",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "files-to-prompt.openedFiles"
        }
      ]
    },
    "configuration": {
      "title": "Files to Prompt",
      "properties": {
        "filesToPrompt.fileTemplate": {
          "type": "string",
          "default": "```{{FilePath}}\n{{Content}}\n```",
          "description": "每个文件的模板。可用变量: {{Content}}, {{FilePath}}, {{FileName}}, {{FileExt}}"
        },
        "filesToPrompt.baseTemplate": {
          "type": "string",
          "default": "### Code Files ###\n\n{{FilePathList}}\n\n{{FilesPrompts}}",
          "description": "基础模板，用于包裹所有文件内容。可用变量: {{FilePathList}}, {{FilesPrompts}}"
        },
        "filesToPrompt.sortOrder": {
          "type": "string",
          "default": "openingOrder",
          "enum": [
            "openingOrder",
            "filePath"
          ],
          "description": "指定合并文档时的排序方式。'openingOrder' (默认值) 保持原始顺序，'filePath' 按文件路径排序。"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}